{{#if category}}
<form action="/admin/categories/{{category.id}}?_method=PUT" method="POST" style="display: inline;">
  <input type="text" name="category_name" placeholder="name" value="{{category.name}}">
  <button type="submit">Update</button>
</form>
or <a href="/admin/categories">Create New</a>
{{else}}
<form action="/admin/categories/{{category.id}}" method="POST" style="display: inline;">
  <input type="text" name="category_name" placeholder="name" value="{{category.name}}">
  <button type="submit">Submit</button>
</form>
{{/if}}


<br />
<br />

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category Name</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>
        <button type="button" class="btn btn-link">
          <a href="/admin/categories/{{this.id}}">
            Edit
          </a>
        </button>
        <form action="/admin/categories/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>