<h1>人氣餐廳</h1>
<hr />

<div class="row">
  {{#each restaurants}}
  <div class="col-12">
    <div class="card">
      <div class="row">
        <div class="col-4">
          {{#if this.image}}
          <img src="{{this.image}}" alt="圖片" style="width: 100%;height: auto;min-width: 100px;min-height: 100px;">
          {{else}}
          <div class="bg-dark" style="width: 100%;height: 0;min-width: 100px;min-height: 100px;padding-bottom: 100%;">
          </div>
          {{/if}}
        </div>
        <div class="col-8 d-flex flex-column justify-content-around">
          <h2>{{this.name}}</h2>
          <span class="badge badge-secondary mr-auto">追蹤人數：{{this.FavoriteCount}}</span>
          <p>{{this.description}}</p>
          <div>
            <a href="/restaurants/{{this.id}}" class="d-inline-block"><button type="submit"
                class="btn btn-primary ">Show</button></a>
            {{#if this.isFavorited }}
            <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" class="d-inline-block"><button
                type="submit" class="btn btn-danger">移除最愛</button></form>
            {{else}}
            <form action="/favorite/{{this.id}}" method="POST" class="d-inline-block"><button type="submit"
                class="btn btn-primary">加到最愛</button>
            </form>
            {{/if}}
          </div>


        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>